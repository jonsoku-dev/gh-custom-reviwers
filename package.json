{
  "name": "custom-review-action",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@actions/core": "1.10.1",
    "@types/glob": "8.1.0",
    "@types/jsdom": "21.1.6",
    "@types/node": "20.11.28",
    "node-fetch": "3.3.2",
    "stylelint": "16.2.1",
    "ts-node": "10.9.2",
    "typescript": "5.4.2"
  },
  "devDependencies": {
    "@actions/github": "6.0.0",
    "@vercel/ncc": "0.38.1",
    "@vitest/coverage-v8": "^3.0.9",
    "axe-core": "4.10.3",
    "glob": "11.0.1",
    "jsdom": "26.0.0",
    "openai": "4.90.0",
    "vitest": "^3.0.9"
  },
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "find dist -type f -name '*.js' -not -path '*/bundled/*' | while read file; do mkdir -p dist/bundled/$(dirname \"${file#dist/}\") && ncc build \"$file\" -o \"dist/bundled/$(dirname \"${file#dist/}\")/$(basename \"$file\" .js)\" && cp -r \"dist/bundled/$(dirname \"${file#dist/}\")/$(basename \"$file\" .js)/index.js\" \"$file\" && rm -rf dist/bundled; done",
    "lint": "eslint . --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "npm run build"
  }
}
